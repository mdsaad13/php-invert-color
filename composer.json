{
    "name": "villfa/invert-color",
    "description": "InvertColor - invert hex color code",
    "keywords": [
        "color",
        "colour",
        "invert",
        "inverse",
        "reverse",
        "opposite"
    ],
    "license": ["MIT"],
    "type": "library",
    "authors": [
        {
            "name": "Fabien Villepinte",
            "email": "fabien.villepinte@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": { "InvertColor\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "InvertColor\\Tests\\": "tests/" }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "prefer-stable": true,
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.8.5",
        "phpunit/phpunit": "^6.4",
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "friendsofphp/php-cs-fixer": "^2.7"
    },
    "scripts": {
        "test": [
            "@composer validate",
            "parallel-lint src/ tests/",
            "phpunit",
            "phpstan analyze src tests --level=7",
            "php-cs-fixer fix --rules=@PSR2 -v --dry-run --stop-on-violation --using-cache=no ."
        ]
    }
}
